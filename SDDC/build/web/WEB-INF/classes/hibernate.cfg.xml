<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.connection.driver_class">oracle.jdbc.OracleDriver</property>
    <property name="hibernate.connection.url">jdbc:oracle:thin:@localhost:1521:XE</property>
    <property name="hibernate.connection.username">System</property>
    <property name="hibernate.connection.password">admin</property>
    <property name="hibernate.current_session_context_class">thread</property>
    <mapping class="entity.Denunciante"/>
    <mapping class="entity.Categoria"/>
    <mapping class="entity.Rol"/>
    <mapping class="entity.Departamento"/>
    <mapping class="entity.Denuncia"/>
    <mapping class="entity.Municipio"/>
    <mapping class="entity.Estado"/>
    <mapping class="entity.Usuario"/>
    <mapping class="entity.Persona"/>
  </session-factory>
</hibernate-configuration>
